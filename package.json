		"@codemirror/merge": "6.6.7",
		"@codemirror/search": "6.5.6",
		"@codemirror/state": "6.4.1",
		"@codemirror/view": "6.31.0",
		"@lezer/highlight": "1.2.0",
		"bits-ui": "0.21.13",
		"clsx": "2.1.1",
		"mode-watcher": "0.4.1",
